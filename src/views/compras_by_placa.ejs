<%- include('partials/header') %>

<div class="container">
  <div class="page-head">
    <div>
      <h1>Historial por placa <span class="mono"><%= placa %></span></h1>
    </div>
    <div class="page-actions">
      <a class="btn btn-secondary" href="/compras">Volver</a>
    </div>
  </div>

  <div class="kpi-row">
    <div class="kpi">
      <div class="kpi-label">Total gastado</div>
      <div class="kpi-value">₡ <%= Number(totalMonto).toFixed(2) %></div>
    </div>
    <div class="kpi">
      <div class="kpi-label">Total cantidad</div>
      <div class="kpi-value"><%= Number(totalCantidad).toFixed(2) %></div>
    </div>
  </div>

  <div class="card">
    <div class="table-wrap">
      <table class="table">
        <thead>
          <tr>
            <th>Fecha</th>
            <th>CEDIS</th>
            <th>Proveedor</th>
            <th>Factura</th>
            <th>Producto</th>
            <th>Cant</th>
            <th>Total</th>
            <th>Solicitó</th>
          </tr>
        </thead>
        <tbody>
          <% compras.forEach(c => { %>
            <tr>
              <td><%= c.fecha_formateada %></td>
              <td><%= c.cedis %></td>
              <td><%= c.proveedor %></td>
              <td><%= c.factura_numero %></td>
              <td><%= c.producto %></td>
              <td><%= c.cantidad %></td>
              <td><strong>₡ <%= Number(c.precio_total).toFixed(2) %></strong></td>
              <td><%= c.solicito %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
