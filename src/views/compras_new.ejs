<%- include('partials/header') %>

<div class="container">
  <h1>Nueva factura</h1>

  <form method="POST" action="/compras/factura">
    <div class="form-grid">

      <label>
        Número de factura
        <input type="text" name="numero" required>
      </label>

      <label>
        Fecha
        <input type="date" name="fecha" required>
      </label>

      <label>
        Proveedor
        <select name="proveedor" required>
          <option value="">Seleccione</option>
          <option>PURDY</option>
          <option>MAXI</option>
          <option>SERVI</option>
          <option>DAITOMA</option>
          <option>AROS Y LLANTAS MUNDIALES</option>
          <option>ET BATERIAS</option>
          <option>LAPA GREEN</option>
          <option value="OTRO">Otro…</option>
        </select>
      </label>

      <label>
        CEDIS
        <input type="text" name="cedis" required>
      </label>

    </div>

    <div class="form-actions">
      <a href="/compras" class="btn btn-secondary">Cancelar</a>
      <button class="btn btn-primary">Continuar</button>
    </div>
  </form>
</div>

<%- include('partials/footer') %>
