<%- include('partials/header') %>

<div class="container factura">

  <h2>Factura</h2>

  <% if (error) { %>
    <div class="alert danger"><%= error %></div>
  <% } %>

  <!-- DATOS FACTURA -->
  <div class="factura-info">
    <div><strong>Fecha:</strong> <%= factura.fecha.toISOString().split('T')[0] %></div>
    <div><strong>Proveedor:</strong> <%= factura.proveedor %></div>
    <div><strong>CEDIS:</strong> <%= factura.cedis %></div>
    <div><strong>N° Factura:</strong> <%= factura.numero || '—' %></div>
  </div>

  <!-- TABLA ITEMS -->
  <table class="table">
    <thead>
      <tr>
        <th>Placa</th>
        <th>Producto</th>
        <th>Cant</th>
        <th>P. Unitario</th>
        <th>Total</th>
        <th>Solicitó</th>
        <th>Obs.</th>
      </tr>
    </thead>
    <tbody>
      <% if (items.length === 0) { %>
        <tr>
          <td colspan="7" style="text-align:center;">Sin items</td>
        </tr>
      <% } %>

      <% items.forEach(i => { %>
        <tr>
          <td><%= i.placa %></td>
          <td><%= i.producto %></td>
          <td><%= i.cantidad %></td>
          <td>₡ <%= Number(i.precio_unitario).toFixed(2) %></td>
          <td>₡ <%= Number(i.precio_total).toFixed(2) %></td>
          <td><%= i.solicito %></td>
          <td><%= i.observacion || '' %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <!-- TOTAL -->
  <div class="factura-total">
    <strong>Total:</strong>
    <span>₡ <%= Number(total).toFixed(2) %></span>
  </div>

  <!-- ACCIONES -->
  <div class="form-actions">
    <a href="/compras" class="btn-cancel">Volver</a>
  </div>

</div>

<%- include('partials/footer') %>
